{
  "Description": "Database worker stack",
  "Parameters": {
    "CERTARN": {
      "NoEcho": true,
      "Type": "String"
    },
    "PasswordEncrypted": {
      "NoEcho": true,
      "Type": "String"
    },
    "ImageId": {
      "Type": "String"
    },
    "InitScript": {
      "Default": "",
      "Type": "String"
    },
    "InstanceType": {
      "Default": "m1.small",
      "Type": "String"
    },
    "KeyName": {
      "Default": "",
      "Type": "String"
    },
    "NtpServer": {
      "Default": "",
      "Type": "String"
    },
    "VolumeId": {
      "Default": "",
      "Type": "String"
    },
    "AvailabilityZones": {
      "Type": "CommaDelimitedList"
    },
    "EuareServiceUrl": {
      "Type": "String"
    },
    "ComputeServiceUrl": {
      "Type": "String"
    },
    "VmExpirationDays": {
      "Type": "String"
    },
    "DBPort":{
      "Type": "Number",
      "Default": "5432"
    }
  },
  "Conditions" : {
    "UseKeypair" : {"Fn::Equals" : [{"Ref" : "KeyName"}, ""]}
  },
  "Resources": {
    "ASG": {
      "Properties": {
        "AvailabilityZones": { "Ref": "AvailabilityZones" },
        "DesiredCapacity": 1,
        "HealthCheckType": "EC2",
        "LaunchConfigurationName": {
          "Ref": "LaunchConfiguration"
        },
        "MaxSize": 1,
        "MinSize": 1,
        "Tags": [
          {
            "Key": "Name",
            "PropagateAtLaunch": "true",
            "Value": "euca-internal-db-servers"
          },
          {
            "Key": "service-type",
            "PropagateAtLaunch": "true",
            "Value": "database"
          }
        ]
      },
      "Type": "AWS::AutoScaling::AutoScalingGroup"
    },
    "InstanceProfile": {
      "Properties": {
        "Path": "/internal/database",
        "Roles": [
          {
            "Ref": "Role"
          }
        ]
      },
      "Type": "AWS::IAM::InstanceProfile"
    },
    "LaunchConfiguration": {
      "Properties": {
        "IamInstanceProfile": {
          "Ref": "InstanceProfile"
        },
        "ImageId": {
          "Ref": "ImageId"
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "KeyName": {
          "Fn::If" : ["UseKeypair",
            { "Ref": "AWS::NoValue" },
            { "Ref": "KeyName" }]
        },
        "SecurityGroups": [
          {
            "Ref": "SecurityGroup"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "euca-c2V0dXAtY3JlZGVudGlhbA==:",
                {
                  "Ref": "VmExpirationDays"
                },
                "\n",
                "#!/bin/bash\n",
                {
                  "Ref": "InitScript"
                },
                "\n",
                "#System generated DB worker config\n",
                "mkdir -p /etc/eucalyptus-database-server/\n",
                "yum -y --disablerepo \\* --enablerepo eucalyptus-service-image install eucalyptus-database-server\n",
                "echo \"",
                "master_password_encrypted=", { "Ref" : "PasswordEncrypted" }, "\n",
                "server_cert_arn=", { "Ref" : "CERTARN" }, "\n",
                "euare_service_url=", { "Ref" : "EuareServiceUrl" }, "\n",
                "compute_service_url=", { "Ref" : "ComputeServiceUrl" }, "\n",
                "ntp_server=", { "Ref" : "NtpServer" }, "\n",
                "volume_id=", { "Ref" : "VolumeId" }, "\n",
                "\" > /etc/eucalyptus-database-server/database-server.conf\n",
                "touch /var/lib/eucalyptus-database-server/ntp.lock\n",
                "chown -R eucalyptus:eucalyptus /etc/eucalyptus-database-server\n",
                "service eucalyptus-database-server start"
              ]
            ]
          }
        }
      },
      "Type": "AWS::AutoScaling::LaunchConfiguration"
    },
    "Role": {
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Path": "/internal/database",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "iam:DownloadServerCertificate"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    {
                      "Ref": "CERTARN"
                    }
                  ]
                }
              ]
            },
            "PolicyName": "db-iam-policy-servercert-worker"
          },
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "s3:*"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    "*"
                  ]
                }
              ]
            },
            "PolicyName": "imaging-iam-policy-s3-worker"
          },
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "ec2:CreateVolume",
                    "ec2:AttachVolume",
                    "ec2:DetachVolume",
                    "ec2:DescribeVolumes"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    "*"
                  ]
                }
              ]
            },
            "PolicyName": "db-iam-policy-volumes"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    },
    "SecurityGroup": {
      "Properties": {
        "GroupDescription": "Database worker's security group",
        "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": { "Ref" : "DBPort" },
                        "ToPort": { "Ref" : "DBPort" }
                    }
                ]
      },
      "Type": "AWS::EC2::SecurityGroup"
    }
  }
}