<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>EucalyptusServiceImpl</servlet-name>
    <servlet-class>com.eucalyptus.webui.server.EucalyptusServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>EucalyptusServiceImpl</servlet-name>
	<url-pattern>/webui/backend</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>EucalyptusWebInterface.html</welcome-file>
  </welcome-file-list>

</web-app>
