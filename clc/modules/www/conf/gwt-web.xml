<web-app>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Secured area</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <servlet>
    <description></description>
    <display-name>EucalyptusWebBackend</display-name>
    <servlet-name>EucalyptusWebBackendImpl</servlet-name>
    <servlet-class>edu.ucsb.eucalyptus.admin.server.EucalyptusWebBackendImpl</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <description></description>
    <display-name>X509Downloader</display-name>
    <servlet-name>X509Download</servlet-name>
    <servlet-class>edu.ucsb.eucalyptus.admin.server.X509Download</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <description></description>
    <display-name>CloudRegistration</display-name>
    <servlet-name>CloudRegistration</servlet-name>
    <servlet-class>edu.ucsb.eucalyptus.admin.server.Registration</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>


  <servlet-mapping>
    <servlet-name>EucalyptusWebBackendImpl</servlet-name>
    <url-pattern>/EucalyptusWebBackend</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>X509Download</servlet-name>
    <url-pattern>/getX509</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CloudRegistration</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>


</web-app>
