<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:style>	
        .error {
        	margin-top:3em;
        	margin-left:auto;
        	margin-right:auto;
        	font-size:90%;
        	color:red;
        	padding:0px 0px 0px 0px;
        }		  
    </ui:style>
    
    <g:HTMLPanel>
        <div class="{style.error}">
            <img alt="Error" src="themes/active/infored.png"/>&nbsp;&nbsp;
            <span>Invalid search or target! Make sure you enter the correct search string or URL.</span>    
        </div>
    </g:HTMLPanel>
    
</ui:UiBinder> 