<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:euca="urn:import:com.eucalyptus.webui.client.view">
    
    <ui:style>
        .toolbar {
            width:99%;
        }
    </ui:style>
    
    <ui:with field="global" type="com.eucalyptus.webui.client.view.GlobalResources"/>
    
    <g:DockLayoutPanel unit="PX">
        <g:north size="36">
            <g:HTMLPanel addStyleNames="{style.toolbar}">
                <table>
                    <colgroup width="1px"/>
                    <colgroup width="50px"/>
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>
                    <tbody>
                        <tr>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="delButton">
                                    <span class="{global.buttonCss.minus} {global.buttonCss.icon}"/>Delete user
                                </g:Anchor>
                            </td>
                            <td>&nbsp;</td>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.left}" ui:field="addPolicyButton">
                                    <span class="{global.buttonCss.lock} {global.buttonCss.icon}"/>Add policy
                                </g:Anchor>                            
                                <g:Anchor styleName="{global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.middle}" ui:field="addKeyButton">
                                    <span class="{global.buttonCss.key} {global.buttonCss.icon}"/>Add key
                                </g:Anchor>                            
                                <g:Anchor styleName="{global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.right}" ui:field="addCertButton">
                                    <span class="{global.buttonCss.sun} {global.buttonCss.icon}"/>Add certificate
                                </g:Anchor>                            
                            </td>
                        </tr>
                    </tbody>
                </table>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:LayoutPanel ui:field="tablePanel"/>
        </g:center>
    </g:DockLayoutPanel>
    
</ui:UiBinder> 