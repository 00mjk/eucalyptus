<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:style>
        .boundingBox {
            height:100%;        	
        }
        a.button {
        	height:100%;
        	display:table;
        	outline:none;
            cursor:pointer;
            cursor:hand;
            padding-left:6px;
            padding-right:6px;
        }
        a.button span.text {
            font-size:70%;
            font-style:italic;
            color:#666666;        	
        	display:table-cell;
        	vertical-align:middle;
        }
        a.button span.icon {
        	width:12px;
        	height:12px;
        	display:table-cell;
        	vertical-align:middle;
            background-image:url('themes/active/loggray.png');
            background-repeat:no-repeat;
            background-position:center center;
        }
        a.button:active span.icon, a.button:focus span.icon, a.button:hover span.icon {
            background-image:url('themes/active/logorange.png');
            background-repeat:no-repeat;
            background-position:center center;                  	
        }
    </ui:style>
    
    <ui:style field="switchStyle" type="com.eucalyptus.webui.client.view.LogSwitch.SwitchStyle">
        .inactive {
            background-color:transparent;        	
        }
        .active {
        	background-color:#DDDDDD;
        }
    </ui:style>
    
    <g:HTMLPanel styleName="{style.boundingBox}">
        <g:Anchor styleName="{style.button}" ui:field="switchButton">
            <span class="{style.icon}"/><span class="{style.text}">&nbsp;LOG</span>
        </g:Anchor>
    </g:HTMLPanel>
    
</ui:UiBinder> 