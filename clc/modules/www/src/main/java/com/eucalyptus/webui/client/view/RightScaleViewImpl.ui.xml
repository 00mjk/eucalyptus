<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:style>
        .icon {
        	vertical-align:middle;
        	margin:12px;
        }
        .label {
        	font-size:90%;
        	font-weight:bold;
        	color:#323232;
        }
        .value {
        	font-size:85%;
        	font-style:italic;
        	color:#4D4D4D;
        }
        .reg {
        }
        .reg td {
        	padding:5px;
        }
    </ui:style>
    
    <g:HTMLPanel>
        <table style="width:100%;">
            <colgroup width="1px"/>
            <tbody>
                <tr>
                    <td style="vertical-align:middle;">
                        <image alt="RightScale" src="themes/active/rightscalelogo.gif" class="{style.icon}"/>
                    </td>
                    <td>
                        <table class="{style.reg}">
                            <tbody>
                                <tr>
                                    <td><g:Label addStyleNames="{style.label}">Cloud URL:</g:Label></td>
                                    <td><g:Label addStyleNames="{style.value}" ui:field="cloudUrl"></g:Label></td>
                                </tr>
                                <tr>
                                    <td><g:Label addStyleNames="{style.label}">Cloud ID:</g:Label></td>
                                    <td><g:Label addStyleNames="{style.value}" ui:field="cloudId"></g:Label></td>
                                </tr>
                                <tr>
                                    <td colspan="2"><g:Button ui:field="registerButton">Register</g:Button></td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </g:HTMLPanel>
    
</ui:UiBinder> 