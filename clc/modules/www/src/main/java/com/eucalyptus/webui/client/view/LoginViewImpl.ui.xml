<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:style>
        .vcenterParent {
        	display:table;
        	width:100%;
        	height:100%;
        }
        .vcenterChild {
        	display:table-cell;
        	vertical-align:middle;
        }
        .prompt {
        	font-size:80%;
        	color:red;
        	text-align:center;
        	margin-bottom:6px;
        }
    </ui:style>
    
    <ui:style field="formStyle" type="com.eucalyptus.webui.client.view.LoginViewImpl.LoginFormStyle">
        @def offset 0px;
        @def size 16px;
        @def color #AAAAAA;
        @def radius 6px;
        .loginBox {
            margin-left:auto;
            margin-right:auto;
            width:18em;
            padding-left:1.5em;
            padding-right:1.5em;
            padding-top:1.5em;
            padding-bottom:1.5em;
            text-align:center;
            border:2px solid #CCCCCC;
            -moz-box-shadow:offset offset size color;
            -webkit-box-shadow:offset offset size color;
            box-shadow:offset offset size color;
            -moz-border-radius:radius;
            -webkit-border-radius:radius;
            -khtml-border-radius:radius;
            border-radius:radius;
            background: #ffffff;
            background: literal("-moz-linear-gradient(top, #ffffff 0%, #e5e5e5 100%)");
            background: literal("-webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#e5e5e5))");
            filter: literal("progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#e5e5e5',GradientType=0)");
            background: literal("-o-linear-gradient(top, #ffffff 0%,#e5e5e5 100%)");
        }
        .loginLabel {
        	font-size:90%;
            text-align:center;
        }
        .checkLabel {
        	font-size:90%;
        	text-align:left;
            margin-left:4px;
        }
        .loginInput {
        	width:100%;
        	border-style:solid;
            border-width:1px;
            border-color:#CCCCCC #999999 #999999 #CCCCCC;     
        }
        .hint {
        	font-size:70%;
        	font-style:italic;
        	color:#555555;
        	font-weight:bold;
        	text-align:left;
        	padding-top:3px;
        }
        .eucaLabel {
            color:#333333;            
        	font-size:120%;
        	font-weight:bold;
        	text-shadow:1px 1px 2px #FFFFFF;
        }
    </ui:style>
    
    <g:HTMLPanel styleName="{style.vcenterParent}">
        <div class="{style.vcenterChild}" ui:field="loginArea" >
            <g:Label styleName="{style.prompt}" ui:field="prompt"/>
        </div>
    </g:HTMLPanel>
    
</ui:UiBinder>