<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
    .panel {
    	width:100%;
    	height:100%;
    }
    .block {
      	width: 240px;
     	height: 300px;
     	/*border: 2px solid #F6C73E;*/
     	-webkit-box-shadow: 0px 0px 10px #AAAAAA;
     	-moz-box-shadow: 0px 0px 10px #AAAAAA;
     	box-shadow: 0px 0px 10px #AAAAAA;
     	-moz-border-radius: 12px;
     	border-radius: 12px;
     	margin:20px;
     	float:left;
    }
    .header {
    	width:100%;
    	height:20px;
        -moz-border-radius-topleft: 12px;
        -moz-border-radius-topright: 12px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
		background: #f7e4af; /* Old browsers */
		background:literal("-moz-linear-gradient(top, #f7e4af 0%, #f6c73e 100%)"); /* FF3.6+ */
		background:literal("-webkit-gradient(linear, left top, left bottom, color-stop(0%,#f7e4af), color-stop(100%,#f6c73e))"); /* Chrome,Safari4+ */
		background:literal("-webkit-linear-gradient(top, #f7e4af 0%,#f6c73e 100%)"); /* Chrome10+,Safari5.1+ */
		background:literal("-o-linear-gradient(top, #f7e4af 0%,#f6c73e 100%)"); /* Opera11.10+ */
		background:literal("-ms-linear-gradient(top, #f7e4af 0%,#f6c73e 100%)"); /* IE10+ */
		filter:literal("progid:DXImageTransform.Microsoft.gradient( startColorstr='#F7E4AF', endColorstr='#F6C73E',GradientType=0 )"); /* IE6-9 */
		background:literal("linear-gradient(top, #f7e4af 0%,#f6c73e 100%)"); /* W3C */
    }
    .mainText {
        font-size:100%;
        color:#414141;
        padding:12px 0px 8px 10px;
        text-align:left;
        text-shadow:1px 1px 1px #FFFFFF;
    }
    </ui:style>
    
    <g:ScrollPanel>
        <g:HTMLPanel addStyleNames="{style.panel}">
            <div class="{style.mainText}">
                Welcome to your Eucalyptus cloud! Following are some quick guides for you to access your cloud's Web console.
            </div>
            <div class="{style.block}"><div class="{style.header}"/>
            </div>
            <div class="{style.block}"><div class="{style.header}"/>
            </div>
            <div class="{style.block}"><div class="{style.header}"/>
            </div>
            <div class="{style.block}"><div class="{style.header}"/>
            </div>
            <div class="{style.block}"><div class="{style.header}"/>
            </div>
            <div class="{style.block}"><div class="{style.header}"/>
            </div>
        </g:HTMLPanel>
    </g:ScrollPanel>
    
</ui:UiBinder> 