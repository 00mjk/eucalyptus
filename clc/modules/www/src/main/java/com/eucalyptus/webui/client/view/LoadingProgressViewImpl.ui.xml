<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:euca="urn:import:com.eucalyptus.webui.client.view">
    
    <ui:style>
        .status {
        	text-align:center;
        	margin-top:1em;
        	font-size:90%;
        	font-style:italic;
        }
        .bar {
        	width:15em;
            position:relative;
            margin-left:auto;
            margin-right:auto;
            margin-top:0.5em;        	
        }
    </ui:style>
    
    <g:HTMLPanel>
        <div class="{style.status}">Loading...</div>
        <euca:ProgressBar styleName="{style.bar}" ui:field="progressBar"/>
    </g:HTMLPanel>
    
</ui:UiBinder>
