<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:euca="urn:import:com.eucalyptus.webui.client.view">

    <ui:style>
        .boundingBox {
        	width:238px;
        	height:100%;
        	border-right:1px solid #CCCCCC;
        }
        .title {
        	width:100%;
        	height:1em;
        	padding-top:0.8em;
        	padding-bottom:1em;
        	font-size:70%;
        	color:#666666;
        	text-align:center;
        	text-shadow:1px 1px 1px #FFFFFF;
        }
        .scroll {
            margin:5px 10px 12px 10px;
            font-size:80%;
            color:#303030;            
        }
    </ui:style>
    
    <g:DockLayoutPanel styleName="{style.boundingBox}" unit="EM">
        <g:north size="1.5">
            <g:Label styleName="{style.title}">QUICK LINKS</g:Label>
        </g:north>
        <g:center>
            <g:ScrollPanel styleName="{style.scroll}" ui:field="treePanel">
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
    
</ui:UiBinder>
