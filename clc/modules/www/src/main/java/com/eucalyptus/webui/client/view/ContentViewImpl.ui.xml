<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:euca="urn:import:com.eucalyptus.webui.client.view">
    
    <ui:style>
        .boundingBox {
            width:100%;
            height:100%;
        }
        .title {
            width:100%;
            height:1em;
            padding-top:0.8em;
            padding-bottom:1em;
            font-size:70%;
            color:#666666;
            text-align:center;
            text-shadow:1px 1px 1px #FFFFFF;
        }
        .scroll {
            margin:5px 10px 12px 10px;
        }
        .button {
        	font-size:80%;
        	width:4.5em;
        	height:2.5em;
        }
        .ctable {
        	width:98%;
        	font-size:80%;
        	color:#333333;
        }
    </ui:style>

    <g:DockLayoutPanel styleName="{style.boundingBox}" unit="EM">
        <g:north size="1.5">
            <g:Label styleName="{style.title}">ACCOUNTS</g:Label>
        </g:north>
        <g:north size="3">
            <g:Button styleName="{style.button}">Click</g:Button>
        </g:north>        
        <g:center>
            <g:ScrollPanel styleName="{style.scroll}">
                <euca:SampleTable styleName="{style.ctable}" ui:field="table"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
    
</ui:UiBinder> 