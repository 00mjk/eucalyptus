<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:style>
        .boundingBox {
        	padding:4px;
        }
        .userAnchor {
        	font-size:90%;
            cursor:pointer;
            color:#2E52A4;
        }
    </ui:style>
    
    <g:HTMLPanel styleName="{style.boundingBox}">
        <table style="width:100%;"><tbody><tr>
            <td>
                <g:Anchor styleName="{style.userAnchor}" ui:field="userAnchor">username@account</g:Anchor>
            </td>
            <td style="vertical-align:middle;padding-left:3px;">
                <img alt="Dropdown" src="themes/active/arrowdown.png"/>
            </td>
        </tr></tbody></table>
    </g:HTMLPanel>
    
</ui:UiBinder> 