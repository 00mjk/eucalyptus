<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
	    .box {
	       width:100%;
	       height:200;
	    }
	</ui:style>
    
    <ui:style field="itemStyle" type="com.eucalyptus.webui.client.view.ItemViewImpl.ItemStyle">
        .item {
        	width:400px;
        	float:left;
        	margin-left:2px 10px 3px 4px;
        }
    </ui:style>
    
    <g:HTMLPanel>
        <table class="width:100%;">
            <tbody>
                <tr>
                    <td>
                        <g:FlowPanel addStyleNames="{style.box}" ui:field="content"></g:FlowPanel>
                    </td>
                </tr>
            </tbody>
        </table>
    </g:HTMLPanel>
    
</ui:UiBinder>
