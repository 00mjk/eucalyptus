<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
      xmlns:euca="http://www.eucalyptus.com/schema/cloud/1.6"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.eucalyptus.com/schema/cloud/1.6 http://www.eucalyptus.com/schema/cloud/1.6/euca.xsd">

    <euca:endpoint name="StorageControllerWS"
                   connector-ref="eucaws"
                   address="http://127.0.0.1:8773/services/Storage"/>

    <endpoint name="StorageWS" address="vm://Storage" synchronous="false"/>
    <endpoint name="StorageInternalWS" address="${euca.storage.host}" synchronous="true"/>
    <endpoint name="StorageReplyQueueWS" address="vm://StorageReplyQueue" synchronous="false"/>

</mule>