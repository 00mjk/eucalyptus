# Eucalyptus LDAP schema

attributetype ( 1.3.6.1.4.1.35803.2.3.1
	NAME 'testAttr'
	DESC 'Eucalyptus Test Attribute'
	EQUALITY caseIgnoreMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.15 )

attributetype ( 1.3.6.1.4.1.35803.2.3.2
	NAME 'queryId'
	DESC 'Eucalyptus AWS User Query ID'
	EQUALITY octetStringMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.40{128}
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.35803.2.3.3
	NAME 'secretKey'
	DESC 'Eucalyptus AWS User Secret Key'
	EQUALITY octetStringMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.40{128}
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.35803.2.3.4
	NAME 'token'
	DESC 'Eucalyptus Web User Session Token'
	EQUALITY octetStringMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.40{128}
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.35803.2.3.5
	NAME 'isAdministrator'
	DESC 'Eucalyptus User Administrator Flag'
	EQUALITY booleanMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.7
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.35803.2.3.6
	NAME 'enabled'
	DESC 'Eucalyptus User Enabled Flag'
	EQUALITY booleanMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.7
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.35803.2.3.7
	NAME 'approved'
	DESC 'Eucalyptus User Approval Flag'
	EQUALITY booleanMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.7
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.35803.2.3.8
	NAME 'confirmed'
	DESC 'Eucalyptus User Confirmation Flag'
	EQUALITY booleanMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.7
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.35803.2.3.9
	NAME 'confirmationCode'
	DESC 'Eucalyptus User Confirmation Code'
	EQUALITY octetStringMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.40{128}
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.35803.2.3.10
	NAME 'passwordExpires'
	DESC 'Eucalyptus User Password Expire Time In Milliseconds, as numerical string'
	EQUALITY numericStringMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.36{128}
	SINGLE-VALUE )

# Format "{alias}base64"
attributetype ( 1.3.6.1.4.1.35803.2.3.11
	NAME 'eucaCertificate'
	DESC 'Eucalyptus AWS User Certificate'
	EQUALITY octetStringMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.40 )

attributetype ( 1.3.6.1.4.1.35803.2.3.12
	NAME 'eucaRevokedCertificate'
	DESC 'Eucalyptus AWS User Certificate, revoked'
	EQUALITY octetStringMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.40 )

# Format "className:value"
attributetype ( 1.3.6.1.4.1.35803.2.3.13
	NAME 'permission'
	DESC 'Eucalyptus Permission'
	EQUALITY octetStringMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.40{128} )

# Format "name:timestamp"
attributetype ( 1.3.6.1.4.1.35803.2.3.14
	NAME 'eucaGroupId'
	DESC 'Eucalyptus Group ID'
	EQUALITY caseIgnoreMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.15 )
	
attributetype ( 1.3.6.1.4.1.35803.2.3.15
	NAME 'eucaGroupTimestamp'
	DESC 'Eucalyptus Group Creation Timestamp'
	EQUALITY caseIgnoreMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.15 )

objectClass ( 1.3.6.1.4.1.35803.2.4.2
	NAME 'eucaUser'
	DESC 'Eucalyptus User'
	SUP inetOrgPerson STRUCTURAL
  MUST ( uid $ cn $ sn )
	MAY (
		mail $ userPassword $ telephoneNumber $
		employeeType $ description $ departmentNumber $
		queryId $ secretKey $ token $ isAdministrator $ enabled $
		eucaCertificate $ eucaRevokedCertificate $
		approved $ confirmed $ passwordExpires $ confirmationCode $
		eucaGroupId ) )

objectClass ( 1.3.6.1.4.1.35803.2.4.3
	NAME 'eucaGroup'
	DESC 'Eucalyptus Group'
	SUP posixGroup STRUCTURAL
	MUST ( cn $ gidNumber $ eucaGroupTimestamp )
	MAY ( memberUid $ permission ) )

objectClass ( 1.3.6.1.4.1.35803.2.4.1
	NAME 'eucaTest'
	DESC 'Eucalyptus Test Class'
	SUP top AUXILIARY
	MAY testAttr )
