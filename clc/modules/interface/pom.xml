<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>eucalyptus</groupId>
    <artifactId>interface</artifactId>
    <version>1.4</version>
    <name>Eucalyptus Web Services Interface</name>
    <build>
        <directory>../../target</directory>
        <outputDirectory>${pom.basedir}/build</outputDirectory>
        <finalName>${project.groupId}-${project.artifactId}-${project.version}</finalName>
        <sourceDirectory>${pom.basedir}/src</sourceDirectory>
        <resources>
            <resource>
                <directory>${pom.basedir}/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpcore</artifactId>
            <version>4.0-beta3</version>
        </dependency>
        <dependency>
            <groupId>org.mule.modules</groupId>
            <artifactId>mule-module-client</artifactId>
            <version>2.0.1</version>
        </dependency>
        <dependency>
            <groupId>eucalyptus</groupId>
            <artifactId>msgs</artifactId>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>eucalyptus</groupId>
            <artifactId>core</artifactId>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>eucalyptus</groupId>
            <artifactId>transport</artifactId>
            <version>1.4</version>
        </dependency>
    </dependencies>
</project>