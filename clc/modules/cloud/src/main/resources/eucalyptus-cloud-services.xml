<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:euca="http://www.eucalyptus.com/schema/cloud/1.6"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.eucalyptus.com/schema/cloud/1.6 http://www.eucalyptus.com/schema/cloud/1.6/euca.xsd">

    <spring:bean name="hsqldb" class="com.eucalyptus.bootstrap.HsqldbBootstrapper" factory-method="getInstance">
        <spring:property name="fileName" value="${euca.home}/var/lib/eucalyptus/db/eucalyptus"/>
    </spring:bean>

</mule>
