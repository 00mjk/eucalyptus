<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
      xmlns:euca="http://www.eucalyptus.com/schema/cloud/1.6"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.eucalyptus.com/schema/cloud/1.6 http://www.eucalyptus.com/schema/cloud/1.6/euca.xsd">

    <euca:connector name="eucaws"/>

    <!--===========  This enables eucalyptus ===========-->
    <spring:beans>
        <spring:import resource="classpath:eucalyptus-services.xml"/>
        <spring:import resource="classpath:eucalyptus-interface.xml"/>
        <spring:import resource="classpath:eucalyptus-userdata.xml"/>
        <spring:import resource="classpath:eucalyptus-verification.xml"/>
        <spring:import resource="classpath:eucalyptus-runtime.xml"/>
        <spring:import resource="classpath:eucalyptus-storage.xml"/>
    </spring:beans>

    <!--===========  This enables walrus ===========-->
    <spring:beans>
        <spring:import resource="classpath:walrus-services.xml"/>
        <spring:import resource="classpath:walrus-model.xml"/>
    </spring:beans>

    <!--===========  This enables block storage ===========-->
    <spring:beans>
        <spring:import resource="classpath:storage-services.xml"/>
        <spring:import resource="classpath:storage-model.xml"/>
    </spring:beans>

    <!--===========  This enables DNS ===========-->
    <spring:beans>
        <spring:import resource="classpath:dns-services.xml"/>
        <spring:import resource="classpath:dns-model.xml"/>
    </spring:beans>

</mule>

