<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:management="http://www.mulesoft.org/schema/mule/management"
      xmlns:vm="http://www.mulesoft.org/schema/mule/vm"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:euca="http://www.eucalyptus.com/schema/cloud/3.4"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:int="http://www.springframework.org/schema/integration"
      xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.4/mule.xsd
        http://www.mulesoft.org/schema/mule/management http://www.mulesoft.org/schema/mule/management/3.4/mule-management.xsd
        http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/3.4/mule-vm.xsd
        http://www.eucalyptus.com/schema/cloud/3.4 http://www.eucalyptus.com/schema/cloud/3.4/euca.xsd">
  <configuration>
    <default-threading-profile 
            doThreading="true"
            maxThreadsActive="256"
            poolExhaustedAction="RUN" />
  </configuration>
  <management:jmx-server/>
  <euca:connector name="eucaws" />
  <vm:connector name="internal-async">
    <service-overrides
        sessionHandler="org.mule.session.NullSessionHandler"/>
    <vm:queue-profile maxOutstandingMessages="1024" />
  </vm:connector>
  <endpoint name="ReplyQueueEndpoint" address="vm://ReplyQueue" exchange-pattern="one-way" />
  <endpoint name="RequestQueueEndpoint" address="vm://RequestQueue" exchange-pattern="one-way" />
  <endpoint name="EmpyreanRequestQueueEndpoint" address="vm://EmpyreanRequestQueue" exchange-pattern="one-way" />
  #foreach( $component in $components )
      <endpoint name="${component.getEntryPoint()}" address="vm://${component.getEntryPoint()}" exchange-pattern="one-way" />
  #end 
  <model name="eucalyptus-bootstrap">
    <default-service-exception-strategy>
      <outbound-endpoint ref="ReplyQueueEndpoint" />
    </default-service-exception-strategy>
    <service name="ReplyQueue">
      <inbound>
        <inbound-endpoint ref="ReplyQueueEndpoint" />
      </inbound>
      <component>
        <singleton-object class="com.eucalyptus.ws.util.ReplyQueue"/>
      </component>
    </service>
    <service name="RequestQueue">
      <inbound>
        <inbound-endpoint ref="RequestQueueEndpoint" />
      </inbound>
      <component>
        <singleton-object class="com.eucalyptus.ws.util.RequestQueue"/>
      </component>
      <outbound>
        <filtering-router>
          <outbound-endpoint ref="EmpyreanRequestQueueEndpoint" 
                             exchange-pattern="one-way" 
                             disableTransportTransformer="true"/>
          <payload-type-filter expectedType="com.eucalyptus.empyrean.EmpyreanMessage" />
        </filtering-router>
        #foreach( $component in $components )
          #foreach( $msgType in ${ComponentMessages.forComponent( $component )} )
          <filtering-router >
            <outbound-endpoint ref="${component.getEntryPoint()}" 
                               exchange-pattern="one-way"
                               disableTransportTransformer="true"/>
            <payload-type-filter expectedType="${msgType.getCanonicalName()}" />
          </filtering-router>
          #end
        #end
        <filtering-router>
          <outbound-endpoint ref="EmpyreanRequestQueueEndpoint" 
                             exchange-pattern="one-way"
                             disableTransportTransformer="true"/>
          <payload-type-filter expectedType="edu.ucsb.eucalyptus.msgs.BaseMessage" />
        </filtering-router>
      </outbound>
    </service>
  </model>

  <!--
    temporary link between mule and spring integration
  -->
  <endpoint name="AutoScalingBackendWS" address="vm://AutoScalingBackend" exchange-pattern="one-way"/>
  <endpoint name="AutoScalingBackendInternalVM" address="vm://AutoScalingBackendInternal" exchange-pattern="request-response"/>
  <endpoint name="AutoScalingWS" address="vm://AutoScaling" exchange-pattern="one-way"/>
  <endpoint name="AutoScalingInternalVM" address="vm://AutoScalingInternal" exchange-pattern="request-response"/>
  <endpoint name="BukkitWS" address="vm://Bukkit" exchange-pattern="one-way"/>
  <endpoint name="BukkitInternalVM" address="vm://BukkitInternal" exchange-pattern="request-response"/>
  <endpoint name="CloudFormationWS" address="vm://CloudFormation" exchange-pattern="one-way"/>
  <endpoint name="CloudFormationInternalVM" address="vm://CloudFormationInternal" exchange-pattern="request-response"/>
  <endpoint name="CloudWatchBackendWS" address="vm://CloudWatchBackend" exchange-pattern="one-way"/>
  <endpoint name="CloudWatchBackendInternalVM" address="vm://CloudWatchBackendInternal" exchange-pattern="request-response"/>
  <endpoint name="CloudWatchWS" address="vm://CloudWatch" exchange-pattern="one-way"/>
  <endpoint name="CloudWatchInternalVM" address="vm://CloudWatchInternal" exchange-pattern="request-response"/>
  <endpoint name="ComponentWS" address="vm://Component" exchange-pattern="one-way"/>
  <endpoint name="ComponentInternalVM" address="vm://ComponentInternal" exchange-pattern="request-response" />
  <endpoint name="ComputeWS" address="vm://Compute" exchange-pattern="one-way"/>
  <endpoint name="ComputeInternalVM" address="vm://ComputeInternal" exchange-pattern="request-response"/>
  <endpoint name="ConfigurationWS" address="vm://Configuration" exchange-pattern="one-way"/>
  <endpoint name="EmpyreanWS" address="vm://Empyrean" exchange-pattern="one-way"/>
  <endpoint name="EmpyreanInternalVM" address="vm://EmpyreanInternal" exchange-pattern="request-response" />
  <endpoint name="EuareWS" address="vm://Euare" exchange-pattern="one-way"/>
  <endpoint name="EuareInternalVM" address="vm://EuareInternal" exchange-pattern="request-response"/>
  <endpoint name="EucalyptusWS" address="vm://Eucalyptus" exchange-pattern="one-way"/>
  <endpoint name="EucalyptusInternalVM" address="vm://EucalyptusInternal" exchange-pattern="request-response" />
  <endpoint name="IdentityWS" address="vm://Identity" exchange-pattern="one-way"/>
  <endpoint name="IdentityInternalVM" address="vm://IdentityInternal" exchange-pattern="request-response"/>
  <endpoint name="ImagingBackendWS" address="vm://ImagingBackend" exchange-pattern="one-way"/>
  <endpoint name="ImagingBackendInternalVM" address="vm://ImagingBackendInternal" exchange-pattern="request-response"/>
  <endpoint name="ImagingWS" address="vm://Imaging" exchange-pattern="one-way"/>
  <endpoint name="ImagingInternalVM" address="vm://ImagingInternal" exchange-pattern="request-response"/>
  <endpoint name="LoadBalancingBackendWS" address="vm://LoadBalancingBackend" exchange-pattern="one-way"/>
  <endpoint name="LoadBalancingBackendInternalVM" address="vm://LoadBalancingBackendInternal" exchange-pattern="request-response"/>
  <endpoint name="LoadBalancingWS" address="vm://LoadBalancing" exchange-pattern="one-way"/>
  <endpoint name="LoadBalancingInternalVM" address="vm://LoadBalancingInternal" exchange-pattern="request-response"/>
  <endpoint name="NotificationsWS" address="vm://Notifications" exchange-pattern="one-way"/>
  <endpoint name="NotificationsInternalVM" address="vm://NotificationsInternal" exchange-pattern="request-response" />
  <endpoint name="ObjectStorageVM" address="vm://ObjectStorageGateway" exchange-pattern="one-way"/>
  <endpoint name="ObjectStorageInternalVM" address="vm://ObjectStorageGatewayInternal" exchange-pattern="request-response"/>
  <endpoint name="PolledNotificationsWS" address="vm://PolledNotifications" exchange-pattern="one-way"/>
  <endpoint name="PolledNotificationsInternalVM" address="vm://PolledNotificationsInternal" exchange-pattern="request-response"/>
  <endpoint name="PropertiesWS" address="vm://Properties" exchange-pattern="one-way"/>
  <endpoint name="ReportingWS" address="vm://Reporting" exchange-pattern="one-way"/>
  <endpoint name="ReportingInternalVM" address="vm://ReportingInternal" exchange-pattern="request-response"/>
  <endpoint name="SimpleWorkflowWS" address="vm://SimpleWorkflow" exchange-pattern="one-way"/>
  <endpoint name="SimpleWorkflowInternalVM" address="vm://SimpleWorkflowInternal" exchange-pattern="request-response"/>
  <endpoint name="StorageWS" address="vm://Storage" exchange-pattern="one-way"/>
  <endpoint name="StorageInternalVM" address="vm://StorageInternal" exchange-pattern="request-response"/>
  <endpoint name="TokensWS" address="vm://Tokens" exchange-pattern="one-way"/>
  <endpoint name="TokensInternalVM" address="vm://TokensInternal" exchange-pattern="request-response"/>
  <endpoint name="VmMetadataWS" address="vm://VmMetadata" exchange-pattern="request-response" />
  <model name="mule-to-spring-integration">
    <service name="mule-to-spring-integration-dispatch">
      <inbound>
        <inbound-endpoint ref="AutoScalingBackendRequestQueueEndpoint" />
        <inbound-endpoint ref="AutoScalingBackendWS" />
        <inbound-endpoint ref="AutoScalingRequestQueueEndpoint" />
        <inbound-endpoint ref="AutoScalingWS" />
        <inbound-endpoint ref="BukkitWS"/>
        <inbound-endpoint ref="CloudFormationRequestQueueEndpoint" />
        <inbound-endpoint ref="CloudFormationWS" />
        <inbound-endpoint ref="CloudWatchBackendRequestQueueEndpoint" />
        <inbound-endpoint ref="CloudWatchBackendWS" />
        <inbound-endpoint ref="CloudWatchRequestQueueEndpoint" />
        <inbound-endpoint ref="CloudWatchWS" />
        <inbound-endpoint ref="ComponentRequestQueueEndpoint" />
        <inbound-endpoint ref="ComponentWS" />
        <inbound-endpoint ref="ComputeRequestQueueEndpoint" />
        <inbound-endpoint ref="ComputeWS" />
        <inbound-endpoint ref="ConfigurationRequestQueueEndpoint" />
        <inbound-endpoint ref="ConfigurationWS" />
        <inbound-endpoint ref="EmpyreanRequestQueueEndpoint" />
        <inbound-endpoint ref="EmpyreanWS" />
        <inbound-endpoint ref="EuareRequestQueueEndpoint" />
        <inbound-endpoint ref="EuareWS" />
        <inbound-endpoint ref="EucalyptusRequestQueueEndpoint" />
        <inbound-endpoint ref="EucalyptusWS" />
        <inbound-endpoint ref="IdentityRequestQueueEndpoint" />
        <inbound-endpoint ref="IdentityWS" />
        <inbound-endpoint ref="ImagingBackendRequestQueueEndpoint" />
        <inbound-endpoint ref="ImagingBackendWS" />
        <inbound-endpoint ref="ImagingRequestQueueEndpoint" />
        <inbound-endpoint ref="ImagingWS" />
        <inbound-endpoint ref="LoadBalancingBackendRequestQueueEndpoint" />
        <inbound-endpoint ref="LoadBalancingBackendWS" />
        <inbound-endpoint ref="LoadBalancingRequestQueueEndpoint" />
        <inbound-endpoint ref="LoadBalancingWS" />
        <inbound-endpoint ref="NotificationsRequestQueueEndpoint" />
        <inbound-endpoint ref="NotificationsWS" />
        <inbound-endpoint ref="ObjectStorageRequestQueueEndpoint"/>
        <inbound-endpoint ref="ObjectStorageVM"/>
        <inbound-endpoint ref="PolledNotificationsRequestQueueEndpoint" />
        <inbound-endpoint ref="PolledNotificationsWS" />
        <inbound-endpoint ref="PropertiesRequestQueueEndpoint" />
        <inbound-endpoint ref="PropertiesWS" />
        <inbound-endpoint ref="ReportingRequestQueueEndpoint" />
        <inbound-endpoint ref="ReportingWS" />
        <inbound-endpoint ref="SimpleWorkflowRequestQueueEndpoint" />
        <inbound-endpoint ref="SimpleWorkflowWS" />
        <inbound-endpoint ref="StorageRequestQueueEndpoint" />
        <inbound-endpoint ref="StorageWS" />
        <inbound-endpoint ref="TokensRequestQueueEndpoint" />
        <inbound-endpoint ref="TokensWS" />
        <inbound-endpoint ref="WalrusBackendRequestQueueEndpoint"/>
      </inbound>
      <component>
        <reflection-entry-point-resolver acceptVoidMethods="true">
          <exclude-object-methods/>
          <exclude-entry-point method="equals"/>
          <exclude-entry-point method="getInvocationHandler"/>
        </reflection-entry-point-resolver>
        <spring-object bean="messaging-gateway-dispatch"/>
      </component>
    </service>
    <service name="mule-to-spring-integration-request-reply">
      <inbound>
        <inbound-endpoint ref="AutoScalingBackendInternalVM" />
        <inbound-endpoint ref="AutoScalingInternalVM" />
        <inbound-endpoint ref="BukkitInternalVM"/>
        <inbound-endpoint ref="CloudFormationInternalVM" />
        <inbound-endpoint ref="CloudWatchBackendInternalVM" />
        <inbound-endpoint ref="CloudWatchInternalVM" />
        <inbound-endpoint ref="ComponentInternalVM" />
        <inbound-endpoint ref="ComputeInternalVM" />
        <inbound-endpoint ref="EmpyreanInternalVM" />
        <inbound-endpoint ref="EuareInternalVM" />
        <inbound-endpoint ref="EucalyptusInternalVM" />
        <inbound-endpoint ref="IdentityInternalVM" />
        <inbound-endpoint ref="ImagingBackendInternalVM" />
        <inbound-endpoint ref="ImagingInternalVM" />
        <inbound-endpoint ref="LoadBalancingBackendInternalVM" />
        <inbound-endpoint ref="LoadBalancingInternalVM" />
        <inbound-endpoint ref="NotificationsInternalVM" />
        <inbound-endpoint ref="ObjectStorageInternalVM"/>
        <inbound-endpoint ref="PolledNotificationsInternalVM" />
        <inbound-endpoint ref="ReportingInternalVM" />
        <inbound-endpoint ref="SimpleWorkflowInternalVM" />
        <inbound-endpoint ref="StorageInternalVM" />
        <inbound-endpoint ref="TokensInternalVM" />
      </inbound>
      <component>
        <reflection-entry-point-resolver acceptVoidMethods="true">
          <exclude-object-methods/>
          <exclude-entry-point method="equals"/>
          <exclude-entry-point method="getInvocationHandler"/>
        </reflection-entry-point-resolver>
        <spring-object bean="messaging-gateway-request-response"/>
      </component>
    </service>
    <service name="VmMetadata">
      <inbound>
        <inbound-endpoint ref="VmMetadataWS" />
      </inbound>
      <component>
        <method-entry-point-resolver>
          <include-entry-point method="handle"/>
        </method-entry-point-resolver>
        <spring-object bean="computeVmMetadata"/>
      </component>
    </service>
  </model>
  <!--
    end temporary link between mule and spring integration
  -->

  <spring:beans>
    <spring:import resource="classpath:eucalyptus-context.xml"/>

    <!-- simple implementations for service components that can be overridden -->
    <int:channel id="bootstrap-request"/>
    #foreach( $component in $components )
      <int:channel id="${component.name}-request"/>
    #end

    <!-- component channel request dispatch by type -->
    <int:payload-type-router input-channel="request-queue">
      <int:mapping type="com.eucalyptus.empyrean.EmpyreanMessage" channel="bootstrap-request"/>
      #foreach( $component in $components )
        #foreach( $msgType in ${ComponentMessages.forComponent( $component )} )
        <int:mapping type="${msgType.getCanonicalName()}" channel="${component.name}-request"/>
        #end
      #end
    </int:payload-type-router>

    <!-- component channel response dispatch by type -->
    <int:payload-type-router input-channel="response-queue" default-output-channel="default-reply-queue" resolution-required="false">
      #foreach( $component in $components )
        #foreach( $msgType in ${ComponentMessages.forComponent( $component )} )
        <int:mapping type="${msgType.getCanonicalName()}" channel="${component.name}-response"/>
        #end
      #end
    </int:payload-type-router>

    <!-- import component configurations -->
    <spring:import resource="classpath*:*-component-context.xml"/>

    <!-- Override some mule defaults -->
    <spring:bean name="_defaultPersistentQueueStore,_fileQueueStore" class="org.mule.util.store.DefaultObjectStoreFactoryBean" factory-method="createDefaultInMemoryQueueStore"/>
    <spring:bean name="_localPersistentObjectStore" class="org.mule.util.store.DefaultObjectStoreFactoryBean" factory-method="createDefaultInMemoryObjectStore"/>
    <spring:bean name="_localUserObjectStore" class="org.mule.util.store.DefaultObjectStoreFactoryBean" factory-method="createDefaultInMemoryObjectStore"/>
  </spring:beans>
</mule>
