<binding force-classes="true">

    <mapping name="DeleteSecurityGroupResponse"
             class="edu.ucsb.eucalyptus.msgs.DeleteSecurityGroupResponseType"
             extends="edu.ucsb.eucalyptus.msgs.EucalyptusMessage">
        <structure map-as="edu.ucsb.eucalyptus.msgs.EucalyptusMessage"/>
        <value name="return" field="_return"/>
    </mapping>

    <mapping name="DeleteSecurityGroup" class="edu.ucsb.eucalyptus.msgs.DeleteSecurityGroupType">
        <value name="groupName" field="groupName"/>
    </mapping>

    <mapping name="CreateSecurityGroupResponse"
             class="edu.ucsb.eucalyptus.msgs.CreateSecurityGroupResponseType"
             extends="edu.ucsb.eucalyptus.msgs.EucalyptusMessage">
        <structure map-as="edu.ucsb.eucalyptus.msgs.EucalyptusMessage"/>
        <value name="return" field="_return"/>
    </mapping>

    <mapping name="CreateSecurityGroup" class="edu.ucsb.eucalyptus.msgs.CreateSecurityGroupType">
        <value name="groupName" field="groupName"/>
        <value name="groupDescription" field="groupDescription"/>
    </mapping>

    <mapping name="DescribeSecurityGroupsResponse"
             class="edu.ucsb.eucalyptus.msgs.DescribeSecurityGroupsResponseType"
             extends="edu.ucsb.eucalyptus.msgs.EucalyptusMessage">
        <structure map-as="edu.ucsb.eucalyptus.msgs.EucalyptusMessage"/>
        <structure name="securityGroupInfo" usage="optional">
            <collection factory="org.jibx.runtime.Utility.arrayListFactory" field="securityGroupInfo">
                <structure name="item" map-as="edu.ucsb.eucalyptus.msgs.SecurityGroupItemType"/>
            </collection>
        </structure>
    </mapping>

    <mapping name="DescribeSecurityGroups" class="edu.ucsb.eucalyptus.msgs.DescribeSecurityGroupsType">
        <collection name="securityGroupSet" factory="org.jibx.runtime.Utility.arrayListFactory" field="securityGroupSet" item-type="java.lang.String">
            <structure name="item">
                <value name="groupName"/>
            </structure>
        </collection>
    </mapping>

    <mapping class="edu.ucsb.eucalyptus.msgs.UserIdGroupPairType" abstract="true">
        <value name="userId" field="sourceUserId" usage="required"/>
        <value name="groupName" field="sourceGroupName" usage="required"/>
    </mapping>

    <mapping class="edu.ucsb.eucalyptus.msgs.SecurityGroupItemType" abstract="true">
        <value name="ownerId" field="ownerId"/>
        <value name="groupName" field="groupName"/>
        <value name="groupDescription" field="groupDescription"/>
        <collection name="ipPermissions" factory="org.jibx.runtime.Utility.arrayListFactory" field="ipPermissions">
            <structure name="item" map-as="edu.ucsb.eucalyptus.msgs.IpPermissionType"/>
        </collection>
    </mapping>

    <mapping class="edu.ucsb.eucalyptus.msgs.IpPermissionType" abstract="true">
        <value name="ipProtocol" field="ipProtocol"/>
        <value name="fromPort" field="fromPort"/>
        <value name="toPort" field="toPort"/>
        <collection name="groups" factory="org.jibx.runtime.Utility.arrayListFactory" field="groups">
            <structure name="item" map-as="edu.ucsb.eucalyptus.msgs.UserIdGroupPairType"/>
        </collection>
        <collection name="ipRanges" factory="org.jibx.runtime.Utility.arrayListFactory" field="ipRanges" item-type="java.lang.String">
            <structure name="item">
                <value name="cidrIp"/>
            </structure>
        </collection>
    </mapping>

    <mapping name="AuthorizeSecurityGroupIngressResponse"
             class="edu.ucsb.eucalyptus.msgs.AuthorizeSecurityGroupIngressResponseType"
             extends="edu.ucsb.eucalyptus.msgs.EucalyptusMessage">
        <structure map-as="edu.ucsb.eucalyptus.msgs.EucalyptusMessage"/>
        <value name="return" field="_return"/>
    </mapping>

    <mapping name="AuthorizeSecurityGroupIngress" class="edu.ucsb.eucalyptus.msgs.AuthorizeSecurityGroupIngressType">
        <value name="userId" field="groupUserId"/>
        <value name="groupName" field="groupName"/>
        <collection name="ipPermissions" factory="org.jibx.runtime.Utility.arrayListFactory" field="ipPermissions">
            <structure name="item" map-as="edu.ucsb.eucalyptus.msgs.IpPermissionType"/>
        </collection>
    </mapping>


    <mapping name="RevokeSecurityGroupIngressResponse"
             class="edu.ucsb.eucalyptus.msgs.RevokeSecurityGroupIngressResponseType"
             extends="edu.ucsb.eucalyptus.msgs.EucalyptusMessage">
        <structure map-as="edu.ucsb.eucalyptus.msgs.EucalyptusMessage"/>
        <value name="return" field="_return"/>
    </mapping>

    <mapping name="RevokeSecurityGroupIngress" class="edu.ucsb.eucalyptus.msgs.RevokeSecurityGroupIngressType">
        <value name="userId" field="groupUserId"/>
        <value name="groupName" field="groupName"/>
        <collection name="ipPermissions" factory="org.jibx.runtime.Utility.arrayListFactory" field="ipPermissions">
            <structure name="item" map-as="edu.ucsb.eucalyptus.msgs.IpPermissionType"/>
        </collection>
    </mapping>

</binding>