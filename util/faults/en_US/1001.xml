<eucafaults version="1" description="Templates for the fault subsystem">
  <fault
    id="1001"
    message="Invalid eucalyptus.conf">

    <condition
      message="Invalid eucalyptus.conf file."/>

    <cause
      message="Nonsense ADDRS_PER_NET settings."/>

    <initiator
      message="${component}"/>

    <location
      message="${hostIp}"/>

    <resolution>
      <message>
        1) Correct ADDRS_PER_NET in eucalyptus.conf
        2) Restart Eucalyptus.
      </message>
    </resolution>
  </fault>
</eucafaults>
